<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="assignmentB" transaction-type="RESOURCE_LOCAL">
        <class>no.hvl.dat250.jpa.assignment.models.User</class>
        <class>no.hvl.dat250.jpa.assignment.models.Poll</class>
        <class>no.hvl.dat250.jpa.assignment.models.TimeLimitPoll</class>
        <class>no.hvl.dat250.jpa.assignment.models.Vote</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:derby:./db/assignmentB;create=true"/>
            <property name="javax.persistence.jdbc.user" value="app"/>
            <property name="javax.persistence.jdbc.password" value="pass"/>

            <!--<property name="eclipselink.ddl-generation" value="create-tables"/>-->
             <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/> <!-- value = "both" enables DDL logging -->
        </properties>

    </persistence-unit>
</persistence>
